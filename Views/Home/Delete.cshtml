@model TeaShop.Models.Tea
@{
	ViewBag.Title = "Удаление чая";
}

<div>
	<dl class="dl-horizontal">
		<dt>Название чая</dt>
		<dd>
			@Html.DisplayFor(Model => Model.TeaName)
		</dd>

		<dt>Цена чая</dt>
		<dd>
			@Html.DisplayFor(Model => Model.PriceOfTea)
		</dd>

		<dt>Категория чая</dt>
		<dd>
			@Html.DisplayFor(Model => Model.CategoryId)
		</dd>

		<dt>Место выращивания чая</dt>
		<dd>
			@Html.DisplayFor(Model => Model.PlaceOfCultivationId)
		</dd>
	</dl>

	<div>
		<form asp-asp-controller="Catalog" asp-action="Delete" method="post">
			<div class="form-group">
				<input type="submit" class="btn btn-default" value="Удалить" />
			</div>
		</form>
	</div>
</div>